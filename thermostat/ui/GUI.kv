<MainScreen>:
    name: "main"
    FloatLayout:
        size_hint: None, None

        #Clock
        Label:
            id: clock_label
            font_name: "Roboto-Regular"
            font_size: 40
            center_x: root.center_x
            center_y: root.center_y * 1.9
            color: 0, 0, 0, 1

        # Current temperature label
        Label:
            id: current_temp_label
            font_size: 40
            text: ""
            center_x: root.center_x * 0.45
            center_y: root.center_y * 1.45
            color: 0, 0, 1, 1

        #Upcoming events
        Button:
            id: upcoming_events_button
            text: "Upcoming Events"
            font_size: 25
            center_x: root.center_x * 0.45
            center_y: root.height * 0.6
            size_hint: None, None
            size: 200, 75
            background_color: 0.631, 0.8, 0.827, 1
            on_press: root.transition_to_upcoming_events()

		# Quit Button
        Button:
            text: 'X'
            font_size: 23
            size_hint: None, None
            size: root.width * 0.015, root.width * 0.015
            x: root.width * 0.965
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_press: root.exit_program()

        # Temperature Change Slider
        Slider:
            id: temp_slider
            orientation: "vertical"
            range: 60, 80
            step: 1
            center_x: root.width * 0.85
            center_y: root.height * 0.5
            size_hint_y: 4.5
            on_touch_move: root.temp_slider_change()

        #Proposed Temperature Label
        Label:
            id: proposed_temp
            text: ""
            font_size: 45
            center_x: root.width * 0.8
            center_y: root.height * 0.5
            color: 0, 0, 0, 0
